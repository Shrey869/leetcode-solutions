class Solution {
    public int minimumDeletions(String s) {
        int ans = 0;
        int countofB = 0;
        for (char c : s.toCharArray()) {
            if (c == 'b') {
                countofB++;
            } else { 
                ans = Math.min(ans + 1, countofB);
            }
        }
        
        return ans;
    }
}
